<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Yellow border layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFF00" /> <!-- Border color (yellow) -->
            <stroke
                android:width="12dp"
                android:color="#FFFF00" /> <!-- Same as the solid color for the border -->
            <corners android:radius="16dp" /> <!-- Increased radius for more rounded corners -->
        </shape>
    </item>

    <!-- Background image layer within the border, centered and tiled -->
    <item android:top="8dp" android:bottom="8dp" android:left="8dp" android:right="8dp">
        <bitmap
            android:src="@drawable/background"
            android:tileMode="repeat"
            android:gravity="center" />
    </item>

    <!-- Semi-transparent, more opaque red overlay -->
    <item android:top="8dp" android:bottom="8dp" android:left="8dp" android:right="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#E6DB3252" /> <!-- Red overlay with 90% opacity -->
            <corners android:radius="16dp" /> <!-- Rounded corners to match the border -->
        </shape>
    </item>

</layer-list>





