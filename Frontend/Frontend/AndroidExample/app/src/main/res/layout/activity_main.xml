<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="50dp"
    android:paddingBottom="50dp">

    <!-- Username Display -->
    <TextView
        android:id="@+id/userNameDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textColor="#FFD700"
        android:text="Hello, [Username]!"/>

    <!-- Title Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:text="Main Menu"/>

    <!-- Horizontal LinearLayout for Two Columns -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- First Column (Left side) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="20dp">

            <!-- Buttons for first column -->
            <Button
                android:id="@+id/LeaderboardBtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Leaderboard"
                android:backgroundTint="#FFD700"/> <!-- Gold color -->
            <Button
                android:id="@+id/LoginBtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Login"
                android:backgroundTint="#FFD700"/> <!-- Gold color -->
            <Button
                android:id="@+id/ClubBtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Club"
                android:backgroundTint="#FFD700"/> <!-- Gold color -->
            <Button
                android:id="@+id/GameBtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Pre Game"
                android:backgroundTint="#FFD700"/> <!-- Gold color -->
            <Button
                android:id="@+id/SettingsBtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Settings"
                android:backgroundTint="#FFD700"/> <!-- Gold color -->
        </LinearLayout>

        <!-- Second Column (Right side) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Buttons for second column -->
            <Button
                android:id="@+id/ClubChatBtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Club Chat"
                android:backgroundTint="#FFD700"/> <!-- Gold color -->
            <Button
                android:id="@+id/Rules"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Rules"
                android:backgroundTint="#FFD700"/> <!-- Gold color -->
            <Button
                android:id="@+id/Welcome"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Welcome"
                android:backgroundTint="#FFD700"/> <!-- Gold color -->
            <Button
                android:id="@+id/Joseki"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Joseki"
                android:backgroundTint="#FFD700"/> <!-- Gold color -->
            <Button
                android:id="@+id/FriendsBtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Friends"
                android:backgroundTint="#FFD700"/> <!-- Gold color -->
            <Button
                android:id="@+id/PreGameBtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Pre Game"
                android:backgroundTint="#FFD700"/> <!-- Gold color -->
            <Button
                android:id="@+id/ProfileBtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Profile"
                android:backgroundTint="#FFD700"/> <!-- Gold color -->
            <Button
                android:id="@+id/LogoutBtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Logout"
                android:backgroundTint="#FFD700"/> <!-- Gold color -->
        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>

